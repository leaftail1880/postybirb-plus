{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "skipLibCheck": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "rootDirs": ["./src", "./test"],
    "paths": {
      "postybirb-commons": ["../commons/"],
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
